package com.vima.controller;

import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.vima.model.MovieAddData;


public class AddData extends HttpServlet {
	@Override
	protected void service(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		
		int id=Integer.parseInt(request.getParameter("id"));
		String movieName =request.getParameter("movieName");
		String language =request.getParameter("language");
		long budget =Long.parseLong(request.getParameter("budget"));
		String director=request.getParameter("director");
		String maleLead=request.getParameter("maleLead");
		String femaleLead=request.getParameter("femaleLead");
		
		
		MovieAddData tempMovie=new MovieAddData();
		tempMovie.setId(id);
		tempMovie.setMovieName(movieName);
		tempMovie.setLanguage(language);
		tempMovie.setBudget(budget);
		tempMovie.setDirector(director);
		tempMovie.setMaleLead(maleLead);
		tempMovie.setFemaleLead(femaleLead);
		
		try {
			int row=tempMovie.addResult();
			
			
		} catch (Exception e) {
			
			e.printStackTrace();
		}
	}
}
